{{!
    @template core/initials_bar

    Initials bar.

    Example context (json):
    {
        "title": "firstnameinitial",
        "class": "ifirst",
        "current": "A"
    }
}}
<div class="initialbar {{class}}">
    <span class="initialbarlabel">{{title}}:</span>
    {{#current}}
        <a href="{{url}}" class="initialbarall">{{all}}</a>
    {{/current}}
    {{^current}}
        <strong class="initialbarall">{{all}}</strong>
    {{/current}}
    <span class="initialbargroups">
        {{#group}}
            <span class="initialbargroup">
                {{#letter}}
                    {{#selected}}
                        <strong >{{name}}</strong>
                    {{/selected}}
                    {{^selected}}
                        <a href="{{url}}">{{name}}</a>
                    {{/selected}}
                {{/letter}}
            </span>
        {{/group}}
    </span>
</div>


{{!
    @template core/search_bar

    Search bar.

    Example context (json):
    {
        "title": "Search",
        "titlebutton": "Go",
        "class": "search visibleifjs",
        "value": "Catalyst",
        "url": "http://moodle.generic32/report/progress/index.php?course=2&sisearch",
        "urlvar": "sisearch"
    }
}}
<div class="initialbar {{class}}">
       <span class="initialbarlabel">{{title}}</span>
       <input type="text" id="{{urlvar}}" data-url="{{url}}" class="initialbarsearch" value="{{value}}">
       <button type="submit" class="initialbarsearchgo">{{titlebutton}}</button>
</div>

{{#js}}
    require(['jquery'], function($) {
        $('.initialbar > input').keyup(function(e) {
            if (e.which == 13) {
                e.preventDefault();
                var s = e.target;
                window.location = s.getAttribute('data-url') + '=' + encodeURIComponent(s.value);
            }
        });

        $('.initialbar > button').click(function(e) {
            e.preventDefault();
            var s = e.target.parentElement.getElementsByClassName('initialbarsearch')[0];
            window.location = s.getAttribute('data-url') + '=' + encodeURIComponent(s.value);
        });

    });
{{/js}}
